<h1>Comments#new</h1>
<p>Find me in app/views/comments/new.html.erb</p>

<%= form_for [@post, @comment] do |f| %>
  
  <%= f.label :body %><br>
  <%= f.text_area :body, size: "100x10" %><br><br>

  <%= f.hidden_field :post_id, value: params[:post_id] %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit %>
    
<% end %><br>