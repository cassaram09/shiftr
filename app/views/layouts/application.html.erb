<!DOCTYPE html>
<html>
<head>
  <title>Shiftr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
  <% if user_signed_in? %>
    <%= link_to "Home", users_path %><br>
    <%= link_to "Profile", user_path(current_user) %><br>
    <%= link_to "Request Form", new_request_path %><br>
    <% if admin %>
      <%= link_to "Requests", requests_path %><br>
      <%= link_to "Shifts", shifts_path %><br>
    <% end %>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  <% end %>

</head>
<body>

<%= yield %>

</body>
</html>
