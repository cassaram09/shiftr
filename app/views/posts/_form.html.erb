<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :body %><br>
  <%= f.text_area :body, size: "60x30" %><br><br>

  <%= f.fields_for(:tags) do |tag_form| %>
    <%= tag_form.label :name, "Tag" %><br>
    <%= tag_form.text_field :name %>
  <% end %>

  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br><br>

  <%= f.submit %>
<% end %><br>

<% @post.errors.full_messages.each do |msg| %>
  <li><%= msg %><br><br>
<% end %>