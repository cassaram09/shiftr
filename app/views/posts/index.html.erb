  <h1>Posts#index</h1>
  <p>Find me in app/views/posts/index.html.erb</p>

  <% @posts.each do |post| %>
    <p><strong><%= post.title %></strong>
    <br><em><%= post.updated_at.strftime("Posted on %B %d, %Y") %></em>
    <p><%= post.body %></p>
    Tags:
    <%post.tags.each do |tag| %>
      <%= "#{tag.name} " %>
    <% end %>
    <p>
      <%= link_to "Edit Post", post,  method: :edit %> |
      <%= link_to "Delete Post", post,  method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>

