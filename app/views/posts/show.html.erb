<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>

<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) if admin %><%= " | " if admin %><%= link_to "(delete)", @post, method: :delete, data: { confirm: 'Are you sure?' } %> </h2>
<em><%= @post.updated_at.strftime("Posted on %B %d, %Y") %></em>
<p><%= @post.body %></p>
Tags:
<% @post.tags.each do |tag| %>
  <%= link_to "#{tag.name}", tag_path(tag) %>
<% end %><br><br>

<h3>Comments</h3>

<%= form_for [@post, @comment] do |f| %>
  
  <%= f.label :body %><br>
  <%= f.text_area :body, size: "100x10" %><br><br>

  <%= f.hidden_field :post_id, value: params[:post_id] %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit %>
    
<% end %>

<% @post.comments.each do |comment| %>
  <p>
    <strong><%= comment.user.name + " " + comment.created_at.strftime("left a comment on %B %d, %Y:") %></strong><br>
    <%= comment.body %> <%= link_to "(edit)", edit_post_comment_path(@post.id, comment) if comment.user.id == current_user.id %></p>
  </p>
<% end %>
