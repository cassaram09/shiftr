<h1>Shifts#show</h1>
<p>Find me in app/views/shifts/show.html.erb</p>

<%= link_to "Add Shift", new_shift_path unless !admin %>

<h2><%= @shift.day %></strong></h2>
<strong><%= @shift.role.capitalize %></strong><br>
Time: <%= @shift.time %><br>
Staff Needed: <%= @shift.staff %><br>

<% if admin %>
<%= link_to "Edit Shift", edit_shift_path(@shift) %> | 
<%= link_to "Delete Shift", @shift,  method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
<% end %>

<h3>Staff</h3>
<% @shift.users.each do |user| %>
  <%= render partial: "users/display", locals: {user: user} %>
<% end %>

