<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<% if @user.avatar_file_name != nil %>
  <%= image_tag(@user.avatar.url, size: "200x200") %><br>
<% elsif @user.identity %>
  <%= image_tag(@user.identity.image, size: "200x200") %><br>
<% end %>

<%= form_for @user do |f| %>
  
  <div>
    Photo: <%= f.file_field :avatar %>
  </div> 
  
  <div>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </div>

  <div> 
    <%= f.label :phone, "Phone:" %>
    <%= f.text_field :phone %><br>
  </div>

  <div> 
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %><br><br>
  </div>

  <% if current_user.email == "zach.newburgh@gmail.com" %>

    <strong>Admin Panel</strong>
    
    <div>
      <%= f.radio_button :gender, 'm' %> 
      <%= label :gender, 'Man' %>
      <%= f.radio_button :gender, 'w' %>
      <%= label :gender, 'Woman' %>
    </div>
    
    <div>
      <%= f.radio_button :role, 'Manager' %> 
      <%= label :role, 'Manager' %>
      <%= f.radio_button :role, 'Counter' %>
      <%= label :role, 'Counter' %>
      <%= f.radio_button :role, 'Busser' %>
      <%= label :role, 'Busser' %>
    </div>

    <div>
      <%= f.radio_button :rating, 'high' %> 
      <%= label :rating, 'High' %>
      <%= f.radio_button :rating, 'medium' %>
      <%= label :rating, 'Medium' %>
      <%= f.radio_button :rating, 'low' %>
      <%= label :rating, 'Low' %><br><br>
    </div>
  <% end %>

  <div>
  <%= f.submit "Update Profile  " %>
  </div>
<% end %>
  





