<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<% @users.sort_by {|k,v| k[:email]}.each do |user| %>
  <div>
    <% if user.identity %>
      <%= link_to image_tag(user.identity.image), user_path(user) %><br>
    <% end %>

    <strong><%= link_to "#{user.name ||= user.identity.name}\n", user_path(user.id) %></strong><br>
    <%= user.email %><br>
    <em><%= user.created_at.strftime("Joined on %B %d, %Y") %></em>

    <% if current_user.email == "zach.newburgh@gmail.com" %>
      <%= form_for :user, method: :patch do |f| %>

        <%= f.radio_button :role, 'manager' %> 
        <%= label :role, 'Manager' %>
        <%= f.radio_button :role, 'counter' %>
        <%= label :role, 'Counter' %>
        <%= f.radio_button :role, 'busser' %>
        <%= label :role, 'Busser' %><br>

        <%= f.radio_button :rating, 'high' %> 
        <%= label :rating, 'High' %>
        <%= f.radio_button :rating, 'medium' %>
        <%= label :rating, 'Medium' %>
        <%= f.radio_button :rating, 'low' %>
        <%= label :rating, 'Low' %><br>
        <%= f.submit "Update" %>
      <% end %><br>
  <% end %>

  </div>
<% end %>
