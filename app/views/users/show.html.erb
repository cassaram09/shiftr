<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<% if @user.avatar_file_name != nil %>
  <%= image_tag(@user.avatar.url, size: "200x200") %><br>
<% elsif @user.identity %>
  <%= image_tag(@user.identity.image, size: "200x200") %><br>
<% end %>

<strong><%= @user.name.to_s + "#{@user.role != '' ? ', ' + @user.role.to_s.capitalize : nil}" %></strong><br>

<em><%= @user.created_at.strftime("Joined on %B %d, %Y") %></em><br>

<% if @user.phone == nil || @user.phone == "" %>
  <%= "[ADD PHONE]" %>
<% else %>
  <%= number_to_phone(@user.phone.gsub(/[()-]/,"").to_i, area_code: true) %>
<% end %>

| <%= @user.email %><br>

<%= link_to "Edit Profile", edit_user_path(@user) if @user.email == current_user.email || current_user.email == "zach.newburgh@gmail.com" %><br><br>

<% if current_user.email == "zach.newburgh@gmail.com" %>

  <strong>Additional</strong>

  <%= form_for(@user) do |f| %>

    <%= f.radio_button :gender, 'm' %> 
    <%= label :gender, 'Man' %>
    <%= f.radio_button :gender, 'w' %>
    <%= label :gender, 'Woman' %><br>

    <%= f.radio_button :role, 'manager' %> 
    <%= label :role, 'Manager' %>
    <%= f.radio_button :role, 'counter' %>
    <%= label :role, 'Counter' %>
    <%= f.radio_button :role, 'busser' %>
    <%= label :role, 'Busser' %><br>

    <%= f.radio_button :rating, 'high' %> 
    <%= label :rating, 'High' %>
    <%= f.radio_button :rating, 'medium' %>
    <%= label :rating, 'Medium' %>
    <%= f.radio_button :rating, 'low' %>
    <%= label :rating, 'Low' %><br>
    <%= f.submit "Save changes" %>

  <% end %><br>

<% else %>

  <br><br>

<% end %>
