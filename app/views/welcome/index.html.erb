<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>

<% @users.each do |user| %>
  <div>
    <% if user.identity %>
      <% image_tag("#{user.identity.image}") %>
    <% end %>

    <%= user.name %><br>
    <%= user.phone.to_s + "\n" unless user.phone == nil %>
    <%= user.email %><br>

    <% if current_user.email == "zach.newburgh@gmail.com" %>
      <%= form_for :user do |f| %>

        <%= f.radio_button :role, 'manager' %> 
        <%= label :role, 'Manager' %>
        <%= f.radio_button :role, 'counter' %>
        <%= label :role, 'Counter' %>
        <%= f.radio_button :role, 'busser' %>
        <%= label :role, 'Busser' %><br>

        <%= f.radio_button :rating, 'high' %> 
        <%= label :rating, 'High' %>
        <%= f.radio_button :rating, 'medium' %>
        <%= label :rating, 'Medium' %>
        <%= f.radio_button :rating, 'low' %>
        <%= label :rating, 'Low' %><br>
        <%= f.submit "Update" %>
      <% end %>
  <% end %>

  </div>
<% end %>
